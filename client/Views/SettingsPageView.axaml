<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HandsomeBot.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
        x:Class="HandsomeBot.Views.SettingsPageView"
        x:DataType="vm:SettingsPageViewModel">

    <StackPanel>
        <Border Margin="5" 
            CornerRadius="10"
            Background="DarkGray"
            BoxShadow="0 0 10 0 Gray">
            <TextBlock Margin="5"
                FontSize="24" 
                HorizontalAlignment="Center"
                Text="Calc Server Settings">
            </TextBlock>
        </Border>
		<StackPanel
			Margin="400"
			VerticalAlignment="Center"
            HorizontalAlignment="Center">
			<Label Margin="10">Server Address</Label>
            <TextBox Name="serverAddress" Margin="0 5" Watermark="Server Address" Text="{Binding TheGame.ServerUrl, Mode=TwoWay}"/>
		</StackPanel>
    </StackPanel>
</UserControl>
